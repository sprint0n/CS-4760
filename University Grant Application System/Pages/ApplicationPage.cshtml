@page
@model University_Grant_Application_System.Pages.ApplicationPageModel
@{
    ViewData["Title"] = "Grant Application";
    if (User.HasClaim("IsAdmin", "True"))
    {
        Layout = "_AdminLayout";
    }
    else if (User.HasClaim("CommitteeStatus", "chair"))
    {
        Layout = "_CommitteeLayout";
    }
    else if (User.HasClaim("CommitteeStatus", "member"))
    {
        Layout = "_ComMemberLayout";
    }
    else if (User.HasClaim("userType", "chair"))
    {
        Layout = "_DeptChairLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}

<div class="container mt-4">
    <h2>University Grant Application</h2>
    <hr />

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="DraftId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="IndexNumber" class="form-label"></label>
                    <input asp-for="IndexNumber" class="form-control" readonly/>
                    <span asp-validation-for="IndexNumber" class="text-danger"></span>
                </div>
            </div>
     
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="TypeOfUser" class="form-label"></label>
                    <select asp-for="TypeOfUser" class="form-select">
                        @foreach (var userType in Model.UserTypes)
                        {
                            <option value="@userType">@userType</option>
                        }
                    </select>
                </div>
            </div>
        </div>


        <div class="mb-3">
            <label asp-for="PrimaryInvestigator" class="form-label"></label>
            <select asp-for="PrimaryInvestigator" class="form-select">
                <option value="">-- Select Investigator --</option>
                @foreach (var userName in Model.AllUsers)
                {
                    <option value="@userName">@userName</option>
                }
            </select>
            <span asp-validation-for="PrimaryInvestigator" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Department" class="form-label"></label>
            <input asp-for="Department" class="form-control" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GrantTitle" class="form-label"></label>
            <input asp-for="GrantTitle" class="form-control" />
            <span asp-validation-for="GrantTitle" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="GrantPurpose" class="form-label"></label>
            <textarea asp-for="GrantPurpose" class="form-control" rows="4"></textarea>
            <span asp-validation-for="GrantPurpose" class="text-danger"></span>
        </div>


        <div>
            <label asp-for="DisseminationBudget" class="form-label"></label>
            <textarea asp-for="DisseminationBudget" class="form-control" rows="4"></textarea>
            <span asp-validation-for="DisseminationBudget" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Timeline" class="form-label"></label>
            <textarea asp-for="Timeline" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Timeline" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Procedure" class="form-label"></label>
            <input asp-for="Procedure" class="form-control" />
            <span asp-validation-for="Procedure" class="text-danger"></span>
        </div>

        <partial name="Shared/_BudgetSection" model="Model" />

        <div class="form-check">
            <input type="checkbox" name="HumansOrAnimals" class="form-check-input" id="HumansAnimalsCheck"
                   value="true" @(Model.HumansOrAnimals == true ? "checked" : "") />
            <label class="form-check-label" for="HumansAnimalsCheck">
                Does your research use Humans or Animals?
            </label>
        </div>

        <div id="fileUploadSection" style="display:@(Model.HumansOrAnimals == true ? "block" : "none");"> 
            <div class="mb-3"> 
                <label asp-for="UploadFile" class="form-label">IRB Documentation Approval</label>
                @{
                    var existingIRB = Model.ExistingFiles.FirstOrDefault(f => 
                        f.Category == University_Grant_Application_System.Models.AttachmentType.IRB);
                    if (existingIRB != null)
                    {
                        <div class="text-success mb-1">
                            <small>Currently attached: @existingIRB.FileName</small>
                            <input type="hidden" name="HasExistingIRB" value="true" />
                        </div>
                    }
                }
                
                <input asp-for="UploadFile" type="file" class="form-control" /> 
                <span asp-validation-for="UploadFile" class="text-danger"></span> 
            </div> 
        </div>

        <div class="form-check">
            <input type="checkbox" name="HasPastFunding" class="form-check-input" id="PastFundingCheck"
                   value="true" @(Model.HasPastFunding == true ? "checked" : "") />
            <label class="form-check-label" for="PastFundingCheck">
                Received past funding (Last 5 years)?
            </label>
        </div>

        <div id="HasPastBudget" style="display:none">
            <div class="mb-3">
                <label asp-for="PastBudget" class="form-label"></label>
                <textarea asp-for="PastBudget" class="form-control" rows="4"></textarea>
                <span asp-validation-for="PastBudget" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="RequiredDocument" class="form-label">Required Supporting Document</label>

            @{
                var existingReq = Model.ExistingFiles.FirstOrDefault(f => 
                    f.Category == University_Grant_Application_System.Models.AttachmentType.SupportingDoc);
                
                if (existingReq != null)
                {
                    <div class="alert alert-success d-flex align-items-center p-2">
                        <i class="bi bi-file-earmark-check-fill me-2"></i>
                        <small>Current: <strong>@existingReq.FileName</strong></small>
                        <input type="hidden" name="HasExistingRequiredDoc" value="true" />
                    </div>
                }
            }

            <input asp-for="RequiredDocument" type="file" class="form-control" />
            <span asp-validation-for="RequiredDocument" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionalDocument1" class="form-label"></label>
            <input asp-for="OptionalDocument1" type="file" class="form-control" />
            <span asp-validation-for="OptionalDocument1" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionalDocument2" class="form-label"></label>
            <input asp-for="OptionalDocument2" type="file" class="form-control" />
            <span asp-validation-for="OptionalDocument2" class="text-danger"></span>
        </div>

        <h4>Other Sources of Funding (Max 4)</h4>
        <div class="income-section mb-4">
            <div id="incomeSourcesContainer">
                @for (int i = 0; i < Model.IncomeSources.Count; i++)
                {
                    <div class="income-source mb-3 border p-3" data-index="@i">
                        <label>Source Name</label>
                        <input asp-for="IncomeSources[@i].SourceName" class="form-control" />

                        <label>Amount ($)</label>
                        <input asp-for="IncomeSources[@i].Amount"
                               class="form-control"
                               type="number"
                               step="0.01" />
                    </div>
                }
            </div>
            <button type="button" id="addSourceBtn" class="btn btn-secondary">
                Add Additional Income Source
            </button>
        </div>

        <button type="submit" name="action" value="Save" class="btn btn-secondary">Save Draft</button>
        <button type="submit" name="action" value="Submit" class="btn btn-primary">Submit Application</button>
    </form>
</div>


@section Scripts {
    @* Client-side validation *@
    <partial name="_ValidationScriptsPartial" />

    @* File upload show/hide logic *@
    <script>
        const checkbox = document.getElementById("HumansAnimalsCheck");
        const uploadSection = document.getElementById("fileUploadSection");
        const pastFundingCheck = document.getElementById("PastFundingCheck");
        const pastBudget = document.getElementById("HasPastBudget");


           checkbox.addEventListener("change", function () {
            uploadSection.style.display = this.checked ? "block" : "none";
        });

           pastFundingCheck.addEventListener("change", function () {
            pastBudget.style.display = this.checked ? "block" : "none";
        });
    </script>
    
    @* Add Income Source dynamic inputs *@
    <script>
        const maxSources = 4;

        document.getElementById("addSourceBtn").addEventListener("click", () => {
            const container = document.getElementById("incomeSourcesContainer");
            const currentCount = container.querySelectorAll(".income-source").length;

            if (currentCount >= maxSources) {
                alert("You can enter a maximum of " + maxSources + " income sources.");
                return;
            }

            const newIndex = currentCount;

            const div = document.createElement("div");
            div.classList.add("income-source", "mb-3", "border", "p-3");
            div.setAttribute("data-index", newIndex);

            div.innerHTML = `
                <label>Source Name</label>
                <input name="IncomeSources[${newIndex}].SourceName"
                       class="form-control" />

                <label>Amount ($)</label>
                <input name="IncomeSources[${newIndex}].Amount"
                       class="form-control"
                       type="number"
                       step="0.01" />
            `;

            container.appendChild(div);
        });
    </script>
}