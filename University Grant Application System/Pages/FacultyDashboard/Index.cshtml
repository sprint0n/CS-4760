@page
@model University_Grant_Application_System.Pages.FacultyDashboard.IndexModel
@{
    ViewData["Title"] = "Grants Dashboard";
}
@section Styles {
        <link rel="stylesheet" href="~/css/FacultyViewIndex.css" />
}

<!-- Top Toolbar -->
<section class="toolbar">
    <div class="toolbar-left">
        <h2>Due Date</h2>
        <p class="due-date">
            @Model.ApplicationDueDate.ToString("MMMM dd, yyyy")
        </p>
    </div>

    <div class="toolbar-right">
        <a asp-page="/ApplicationPage" class="btn btn-primary">
            New Grant Application
        </a>
    </div>
</section>

<hr />

<!--Saved Applications -->
<section class="applications-section">
    <h3>Saved Grant Applications</h3>

    <div class="horizontal-scroll">
        @foreach (var app in Model.SavedApplications)
        {
            <a asp-page="/ApplicationPage" asp-route-draftId="@app.Id" class="card application-card" style="text-decoration: none; color: inherit;">
                <h4>@app.Title</h4>
                <p>Status: @app.Status</p>
            </a>
        }
    </div>
</section>

<!-- In Review / Finished Applications -->
<section class="applications-section">
    <h3>In Review Applications</h3>

    <div class="horizontal-scroll">
        @foreach (var app in Model.InReviewApplications)
        {
            <div class="card application-card">
                <h4>@app.Title</h4>
                <p>Status: @app.Status</p>
            </div>
        }
    </div>
</section>

<hr />

<!-- Approved Grants -->
<section class="approved-section">
    <h3>Approved Grants</h3>

    @if (Model.ApprovedGrants.Any())
    {
        <ul class="approved-list">
            @foreach (var grant in Model.ApprovedGrants)
            {
                <li class="approved-item">
                    <strong>@grant.Title</strong>
                    <span class="amount">@grant.Amount.ToString("C")</span>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No approved grants yet.</p>
    }
</section>
