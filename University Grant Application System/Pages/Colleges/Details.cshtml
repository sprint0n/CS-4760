@page
@model University_Grant_Application_System.Pages.Colleges.DetailsModel

@{
    ViewData["Title"] = "College Details";
    Layout = "_AdminLayout";
}

<h1>College Details</h1>
<hr />

<div class="card shadow-sm" style="max-width: 500px;">
    <div class="card-body">

        <dl class="row mb-0">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.College.CollegeName</dd>
        </dl>

    </div>
</div>

<div class="d-flex gap-2 mt-3">
    <a asp-page="Edit" asp-route-id="@Model.College.Id" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
