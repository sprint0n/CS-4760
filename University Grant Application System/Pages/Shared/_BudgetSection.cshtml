@model University_Grant_Application_System.Pages.ApplicationPageModel

<div class="card mt-4 mb-4">
    <div class="card-header bg-primary text-white">
        <h3>Budget</h3>
    </div>
    <div class="card-body">

        <div class="row mb-4 p-2 bg-light border rounded mx-1">
            <div class="col-md-4">
                <label class="fw-bold">Total RSPGs:</label>
                <input type="text" id="globalTotalRSPG" class="form-control text-success fw-bold" placeholder="$0.00" readonly />
            </div>
            <div class="col-md-4">
                <label class="fw-bold">Total Others:</label>
                <input type="text" id="globalTotalOther" class="form-control text-secondary fw-bold" placeholder="$0.00" readonly />
            </div>
            <div class="col-md-4">
                <label class="fw-bold">Total Taxes:</label>
                <input type="text" id="globalTotalTax" class="form-control text-danger fw-bold" placeholder="$0.00" readonly />
            </div>
        </div>

        <ul class="nav nav-tabs" id="budgetTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="personnel-tab" data-bs-toggle="tab" data-bs-target="#personnel" type="button" role="tab">Personnel</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="equipment-tab" data-bs-toggle="tab" data-bs-target="#equipment" type="button" role="tab">Equipment</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="travel-tab" data-bs-toggle="tab" data-bs-target="#travel" type="button" role="tab">Travel</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="other-tab" data-bs-toggle="tab" data-bs-target="#other" type="button" role="tab">Other</button>
            </li>
        </ul>

        <div class="tab-content pt-3">
            <div class="tab-pane fade show active" id="personnel" role="tabpanel">
                <h5 class="mb-3">Personnel Expenses</h5>
                <div id="personnel-container">
                    @if (Model.PersonnelExpenses != null)
                    {
                        for (int i = 0; i < Model.PersonnelExpenses.Count; i++)
                        {
                            <div class="personnel-row border p-3 mb-3 rounded shadow-sm">
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <label class="form-label small">Role</label>
                                        <select asp-for="PersonnelExpenses[i].Role" class="form-control form-control-sm role-select" onchange="calculateGlobalTotals()">
                                            <option value="Student">Student</option>
                                            <option value="Teacher">Teacher</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label small">Description</label>
                                        <input asp-for="PersonnelExpenses[i].Description" class="form-control form-control-sm" placeholder="Task description" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label small text-success">RSPG ($)</label>
                                        <input asp-for="PersonnelExpenses[i].Amount" class="form-control form-control-sm rspg-calc amount-input" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label small text-secondary">Other ($)</label>
                                        <input asp-for="PersonnelExpenses[i].OtherAmount1" class="form-control form-control-sm other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-1">
                                        <label class="form-label small text-secondary">Other ($)</label>
                                        <input asp-for="PersonnelExpenses[i].OtherAmount2" class="form-control form-control-sm other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addPersonRow()">+ Add New Person</button>
            </div>

            <div class="tab-pane fade" id="equipment" role="tabpanel">
                <h5 class="mb-3">Equipment Expenses</h5>
                <div id="equipment-container">
                    @if (Model.EquipmentExpenses != null)
                    {
                        for (int i = 0; i < Model.EquipmentExpenses.Count; i++)
                        {
                            <div class="equipment-row border p-3 mb-3 rounded shadow-sm">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label">Equipment Name</label>
                                        <input asp-for="EquipmentExpenses[i].EquipmentName" class="form-control" placeholder="Equipments..." />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-success">RSPG ($)</label>
                                        <input asp-for="EquipmentExpenses[i].RSPGAmount" class="form-control rspg-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-secondary">Other ($)</label>
                                        <input asp-for="EquipmentExpenses[i].OtherAmount1" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-secondary">Other ($)</label>
                                        <input asp-for="EquipmentExpenses[i].OtherAmount2" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addEquipmentRow()">+ Add New Equipment</button>
            </div>

            <div class="tab-pane fade" id="travel" role="tabpanel">
                <h5 class="mb-3">Travel Expenses</h5>
                <div id="travel-container">
                    @if (Model.TravelExpenses != null)
                    {
                        for (int i = 0; i < Model.TravelExpenses.Count; i++)
                        {
                            <div class="travel-row border p-3 mb-3 rounded shadow-sm">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label">Travel Name</label>
                                        <input asp-for="TravelExpenses[i].TravelName" class="form-control" placeholder="Trip or travel..." />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-success">RSPG ($)</label>
                                        <input asp-for="TravelExpenses[i].RSPGAmount" class="form-control rspg-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-secondary">Other ($)</label>
                                        <input asp-for="TravelExpenses[i].OtherAmount1" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-secondary">Other ($)</label>
                                        <input asp-for="TravelExpenses[i].OtherAmount2" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addTravelRow()">+ Add New Travel</button>
            </div>

            <div class="tab-pane fade" id="other" role="tabpanel">
                <h5 class="mb-3">Other Expenses</h5>
                <div id="other-container">
                    @if (Model.OtherExpenses != null)
                    {
                        for (int i = 0; i < Model.OtherExpenses.Count; i++)
                        {
                            <div class="other-row border p-3 mb-3 rounded shadow-sm">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label">Expense Name</label>
                                        <input asp-for="OtherExpenses[i].OtherExpenseName" class="form-control" placeholder="Expense description..." />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-success">RSPG ($)</label>
                                        <input asp-for="OtherExpenses[i].Amount" class="form-control rspg-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-secondary">Other ($)</label>
                                        <input asp-for="OtherExpenses[i].OtherAmount1" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-secondary">Other ($)</label>
                                        <input asp-for="OtherExpenses[i].OtherAmount2" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addOtherRow()">+ Add New Other</button>
            </div>

        </div>
    </div>
</div>

<script>
    // --- INDICES FOR DYNAMIC ROWS ---
    let personIndex = @(Model.PersonnelExpenses?.Count ?? 0) === 0 ? 1 : @(Model.PersonnelExpenses?.Count ?? 0);
    let equipIndex = @(Model.EquipmentExpenses?.Count ?? 0) === 0 ? 1 : @(Model.EquipmentExpenses?.Count ?? 0);
    let travelIndex = @(Model.TravelExpenses?.Count ?? 0) === 0 ? 1 : @(Model.TravelExpenses?.Count ?? 0);
    let otherIndex = @(Model.OtherExpenses?.Count ?? 0) === 0 ? 1 : @(Model.OtherExpenses?.Count ?? 0);

    // --- GLOBAL CALCULATION LOGIC ---
    function calculateGlobalTotals() {
        let totalRspg = 0;
        let totalOther = 0;

        // 1. Sum EVERY RSPG input from ALL tabs
        document.querySelectorAll('.rspg-calc').forEach(input => {
            totalRspg += parseFloat(input.value) || 0;
        });

        // 2. Sum EVERY 'Other' input from ALL tabs
        document.querySelectorAll('.other-calc').forEach(input => {
            totalOther += parseFloat(input.value) || 0;
        });

        // 3. Calculate Tax on the TOTAL RSPG based on the Role dropdown
        let roleSelect = document.querySelector('.role-select');
        let rate = 0;
        if (roleSelect) {
            // 8.25% for Student, 22.5% for Teacher
            rate = (roleSelect.value === "Student") ? 0.0825 : 0.225;
        } else {
            // Default to student rate if no dropdown exists
            rate = 0.0825;
        }

        // Apply tax rate to the sum of ALL RSPGs
        let totalTax = totalRspg * rate;

        // 4. Update the UI
        document.getElementById('globalTotalRSPG').value = "$" + totalRspg.toFixed(2);
        document.getElementById('globalTotalOther').value = "$" + totalOther.toFixed(2);
        document.getElementById('globalTotalTax').value = "$" + totalTax.toFixed(2);
    }

    // Run calculation on page load in case there is existing data
    document.addEventListener("DOMContentLoaded", calculateGlobalTotals);

    // --- HELPER TO REMOVE ROWS ---
    function removeRow(button) {
        button.closest('div[class*="-row"]').remove();
        calculateGlobalTotals();
    }

    // --- PERSONNEL JS ---
    function addPersonRow() {
        const container = document.getElementById('personnel-container');
        const newRow = `
        <div class="personnel-row border p-3 mb-3 rounded shadow-sm">
            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
            </div>
            <div class="row g-2">
                <div class="col-md-3">
                    <select name="PersonnelExpenses[${personIndex}].Role" class="form-control form-control-sm role-select" onchange="calculateGlobalTotals()">
                        <option value="Student">Student</option>
                        <option value="Teacher">Teacher</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" name="PersonnelExpenses[${personIndex}].Description" class="form-control form-control-sm" placeholder="Description" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="PersonnelExpenses[${personIndex}].Amount" class="form-control form-control-sm rspg-calc amount-input" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="PersonnelExpenses[${personIndex}].OtherAmount1" class="form-control form-control-sm other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-1">
                    <input type="number" name="PersonnelExpenses[${personIndex}].OtherAmount2" class="form-control form-control-sm other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
            </div>
        </div>`;
        container.insertAdjacentHTML('beforeend', newRow);
        personIndex++;
        calculateGlobalTotals();
    }

    // --- EQUIPMENT JS ---
    function addEquipmentRow() {
        const container = document.getElementById('equipment-container');
        const newRow = `
        <div class="equipment-row border p-3 mb-3 rounded shadow-sm">
            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
            </div>
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="EquipmentExpenses[${equipIndex}].EquipmentName" class="form-control" placeholder="Equipment Name" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="EquipmentExpenses[${equipIndex}].RSPGAmount" class="form-control rspg-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="EquipmentExpenses[${equipIndex}].OtherAmount1" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="EquipmentExpenses[${equipIndex}].OtherAmount2" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
            </div>
        </div>`;
        container.insertAdjacentHTML('beforeend', newRow);
        equipIndex++;
    }

    // --- TRAVEL JS ---
    function addTravelRow() {
        const container = document.getElementById('travel-container');
        const newRow = `
        <div class="travel-row border p-3 mb-3 rounded shadow-sm">
            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
            </div>
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="TravelExpenses[${travelIndex}].TravelName" class="form-control" placeholder="Travel Description" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="TravelExpenses[${travelIndex}].RSPGAmount" class="form-control rspg-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="TravelExpenses[${travelIndex}].OtherAmount1" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="TravelExpenses[${travelIndex}].OtherAmount2" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
            </div>
        </div>`;
        container.insertAdjacentHTML('beforeend', newRow);
        travelIndex++;
    }

    // --- OTHER JS ---
    function addOtherRow() {
        const container = document.getElementById('other-container');
        const newRow = `
        <div class="other-row border p-3 mb-3 rounded shadow-sm">
            <div class="d-flex justify-content-end mb-2">
                <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
            </div>
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="OtherExpenses[${otherIndex}].OtherExpenseName" class="form-control" placeholder="Description" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="OtherExpenses[${otherIndex}].RSPGAmount" class="form-control rspg-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="OtherExpenses[${otherIndex}].OtherAmount1" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="OtherExpenses[${otherIndex}].OtherAmount2" class="form-control other-calc" oninput="calculateGlobalTotals()" placeholder="0.00" />
                </div>
            </div>
        </div>`;
        container.insertAdjacentHTML('beforeend', newRow);
        otherIndex++;
    }
</script>