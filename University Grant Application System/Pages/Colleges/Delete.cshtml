@page
@model University_Grant_Application_System.Pages.Colleges.DeleteModel

@{
    ViewData["Title"] = "Delete College";
    Layout = "_AdminLayout";
}

<h1>Delete College</h1>
<hr />

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this college?</strong>
</div>

<div class="card shadow-sm" style="max-width: 500px;">
    <div class="card-body">

        <dl class="row mb-0">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.College.CollegeName</dd>
        </dl>

    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="College.Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
