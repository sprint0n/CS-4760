@page
@model University_Grant_Application_System.Pages.ComMemberDashboard.IndexModel
@{
    ViewData["Title"] = "Committee Dashboard";
    Layout = "_ComMemberLayout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/FacultyViewIndex.css" />
}

<!-- Dashboard header: due date + action -->
<div class="dashboard-header">
    <div>
        <div class="due-date-label">Application Due Date</div>
        <p class="due-date-value">@Model.ApplicationDueDate.ToString("MMMM dd, yyyy")</p>
    </div>
    <a asp-page="/ApplicationPage" class="btn btn-primary">
        + New Application
    </a>
</div>

<!-- Due Date Notification -->
@{
    var daysUntilDue = (Model.ApplicationDueDate - DateTime.Today).Days;
}
@if (daysUntilDue < 0)
{
    <div class="alert alert-due-date alert-due-overdue mb-4">
        <strong>Applications are past due.</strong> The deadline was @Model.ApplicationDueDate.ToString("MMMM dd, yyyy").
    </div>
}
else if (daysUntilDue <= 7)
{
    <div class="alert alert-due-date alert-due-warning mb-4">
        <strong>Applications due soon!</strong> Only <strong>@daysUntilDue day@(daysUntilDue != 1 ? "s" : "")</strong> remaining until the deadline on @Model.ApplicationDueDate.ToString("MMMM dd, yyyy").
    </div>
}

<!-- Grants Awaiting Your Review -->
<div class="card mb-4">
    <div class="card-header d-flex align-items-center gap-2">
        <span class="section-title mb-0 border-0 pb-0">Grants Awaiting Your Review</span>
    </div>
    <div class="card-body">
        @if (Model.ToReviewGrants != null && Model.ToReviewGrants.Any())
        {
            <div class="horizontal-scroll">
                @foreach (var grant in Model.ToReviewGrants)
                {
                    <div class="application-card">
                        <h4>@grant.Title</h4>
                        <p class="card-status">
                            <span class="badge badge-status-review">Pending Review</span>
                        </p>
                        <p class="card-detail"><strong>PI:</strong> @grant.PrimaryInvestigator</p>
                        <p class="card-detail"><strong>Amount:</strong> @(grant.Amount?.ToString("C") ?? "$0.00")</p>
                        <div class="card-actions">
                            <a asp-page="/Rubric" asp-route-id="@grant.ApplicationId" class="btn btn-accent btn-sm w-100">
                                Score Application
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p class="text-muted">You have no pending applications to review at this time.</p>
            </div>
        }
    </div>
</div>

<!-- Saved Applications -->
<div class="card mb-4">
    <div class="card-header d-flex align-items-center gap-2">
        <span class="section-title mb-0 border-0 pb-0">Saved Applications</span>
    </div>
    <div class="card-body">
        @if (Model.SavedApplications.Any())
        {
            <div class="horizontal-scroll">
                @foreach (var app in Model.SavedApplications)
                {
                    <div class="application-card">
                        <h4>@app.Title</h4>
                        <p class="card-status">
                            <span class="badge badge-status-saved">@app.Status</span>
                        </p>
                        <div class="card-actions">
                            <a asp-page="/ApplicationPage" asp-route-draftId="@app.ApplicationId" class="btn btn-primary btn-sm">
                                Edit
                            </a>
                            <form method="post" asp-page-handler="DeleteDraft">
                                <input type="hidden" name="draftId" value="@app.ApplicationId" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p class="text-muted">No saved applications yet. Start a new one above.</p>
            </div>
        }
    </div>
</div>

<!-- Submitted Applications -->
<div class="card mb-4">
    <div class="card-header">
        <span class="section-title mb-0 border-0 pb-0">Submitted Applications</span>
    </div>
    <div class="card-body">
        @if (Model.InReviewApplications.Any())
        {
            <div class="horizontal-scroll">
                @foreach (var app in Model.InReviewApplications)
                {
                    <div class="application-card">
                        <h4>@app.Title</h4>
                        <p class="card-status">
                            <span class="badge badge-status-review">@app.Status</span>
                        </p>
                        <p class="card-detail"><strong>PI:</strong> @app.PrimaryInvestigator</p>
                        <p class="card-detail"><strong>RSPG Amount:</strong> @(app.Amount?.ToString("C") ?? "$0.00")</p>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p class="text-muted">No applications currently under review.</p>
            </div>
        }
    </div>
</div>

<!-- Approved Grants -->
<div class="card">
    <div class="card-header">
        <span class="section-title mb-0 border-0 pb-0">Approved Grants</span>
    </div>
    <div class="card-body">
        @if (Model.ApprovedGrants.Any())
        {
            <ul class="approved-list">
                @foreach (var grant in Model.ApprovedGrants)
                {
                    <li class="approved-item">
                        <div>
                            <strong>@grant.Title</strong>
                            <span class="d-block text-muted" style="font-size: 0.85rem;">PI: @grant.PrimaryInvestigator</span>
                        </div>
                        <span class="amount">@(grant.Amount?.ToString("C") ?? "$0.00")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="empty-state">
                <p class="text-muted">No approved grants yet.</p>
            </div>
        }
    </div>
</div>
