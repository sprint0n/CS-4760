@page
@model University_Grant_Application_System.Pages.AdminDashboard.IndexModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<!-- Displays if the uplaod was successful -->
@if (TempData["UploadSuccess"] != null)
{
    <div id="uploadSuccessAlert" class="alert alert-success mt-3">
        @TempData["UploadSuccess"]
    </div>
}

<div class="mb-3 d-flex gap-2">

    <button class="btn btn-primary">RSPG</button>

    <form method="post" enctype="multipart/form-data" class="d-flex gap-2 align-items-center">
        <input type="file" asp-for="UploadFile" id="fileInput" style="display:none" />

        <!-- Button that opens the file picker -->
        <button type="button" class="btn btn-secondary" onclick="document.getElementById('fileInput').click();">
            Upload File
        </button>

        <!-- Filename appears here -->
        <span id="fileName" class="text-muted" style="display:none;"></span>

        <!-- Submit button (hidden until a file is selected) -->
        <button type="submit" id="uploadSubmit" class="btn btn-success" style="display:none;">
            Submit
        </button>
    </form>

    <button class="btn btn-success">Calendar Tab</button>

</div>




<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AdminList[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.AdminList[0].School)</th>
            <th>@Html.DisplayNameFor(model => model.AdminList[0].College)</th>
            <th>@Html.DisplayNameFor(model => model.AdminList[0].Department)</th>
            <th>Add to Committee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdminList)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.School)</td>
                <td>@Html.DisplayFor(modelItem => item.College)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>
                    <a class="btn btn-primary" asp-page="./AddToCommittee" asp-route-id="@item.Id">
                        Add to Committee
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script> // USED FOR FILE UPLOADER
    document.getElementById('fileInput').addEventListener('change', function () {
        const submitBtn = document.getElementById('uploadSubmit');
        const fileNameSpan = document.getElementById('fileName');

        if (this.files.length > 0) {
            const fileName = this.files[0].name;

            // Show filename
            fileNameSpan.textContent = fileName;
            fileNameSpan.style.display = 'inline';

            // Show submit button
            submitBtn.style.display = 'inline-block';
        }
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alert = document.getElementById("uploadSuccessAlert");
        if (alert) {
            setTimeout(() => {
                alert.style.transition = "opacity 1s ease";
                alert.style.opacity = "0";

                // Remove from layout after fade
                setTimeout(() => alert.remove(), 1000);
            }, 3000); // Wait 3 seconds before fading
        }
    });
</script>


