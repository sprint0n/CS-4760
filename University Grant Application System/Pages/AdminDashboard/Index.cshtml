@page
@model University_Grant_Application_System.Pages.AdminDashboard.IndexModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<!-- Page header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h3 mb-1" style="color: var(--primary);">Admin Dashboard</h1>
        <p class="text-muted mb-0">Manage users, committee members, and system settings.</p>
    </div>
</div>

<!-- Upload success alert (auto-fades) -->
@if (TempData["UploadSuccess"] != null)
{
    <div id="uploadSuccessAlert" class="alert alert-success mb-4">
        @TempData["UploadSuccess"]
    </div>
}

<!-- Action toolbar -->
<div class="card mb-4">
    <div class="card-body d-flex flex-wrap gap-2 align-items-center">
        <a class="btn btn-primary" asp-page="Create">
            + Create New User
        </a>

        <button class="btn btn-outline-secondary">RSPG</button>

        <a asp-page="/Calendar" class="btn btn-outline-secondary">
            Calendar
        </a>

        <form method="post" enctype="multipart/form-data" class="d-flex gap-2 align-items-center ms-auto">
            <input type="file" asp-for="UploadFile" id="fileInput" style="display:none" />
            <button type="button" class="btn btn-outline-secondary"
                    onclick="document.getElementById('fileInput').click();">
                Upload File
            </button>
            <span id="fileName" class="text-muted small" style="display:none;"></span>
            <button type="submit" id="uploadSubmit" class="btn btn-success" style="display:none;">
                Submit
            </button>
        </form>
    </div>
</div>

<!-- Committee Members table -->
<div class="card mb-4">
    <div class="card-header">Committee Members</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <colgroup>
                    <col style="width: 8%;">
                    <col style="width: 8%;">
                    <col style="width: 10%;">
                    <col style="width: 12%;">
                    <col style="width: 12%;">
                    <col style="width: 15%;">
                    <col style="width: 9%;">
                    <col style="width: 10%;">
                    <col style="width: 5%;">
                    <col style="width: 11%;">
                </colgroup>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Users[0].FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].College)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].School)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].Department)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].AccountID)</th>
                        <th>Role</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CommitteeMembers)
                    {
                        <tr class="@(item.committeeMemberStatus == "chair" ? "table-success" : "")">
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.College.CollegeName)</td>
                            <td>@Html.DisplayFor(modelItem => item.School.SchoolName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.AccountID)</td>
                            <td>
                                @if (item.committeeMemberStatus == "chair")
                                {
                                    <span class="badge badge-role">Chair</span>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="MakeChair" style="display:inline;">
                                        <input type="hidden" name="userId" value="@item.UserId" />
                                        <button class="btn btn-warning btn-sm">Make Chair</button>
                                    </form>
                                }
                            </td>
                            <td>
                                <form method="post" asp-page-handler="RemoveFromCommittee">
                                    <input type="hidden" name="userId" value="@item.UserId" />
                                    <button class="btn btn-outline-danger btn-sm">Remove</button>
                                </form>
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.UserId" class="text-muted">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.UserId" class="text-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Non-Committee Members table -->
<div class="card">
    <div class="card-header">Non-Committee Members</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <colgroup>
                    <col style="width: 8%;">
                    <col style="width: 8%;">
                    <col style="width: 12%;">
                    <col style="width: 12%;">
                    <col style="width: 12%;">
                    <col style="width: 15%;">
                    <col style="width: 9%;">
                    <col style="width: 12%;">
                    <col style="width: 8%;">
                </colgroup>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Users[0].FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].College)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].School)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].Department)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Users[0].AccountID)</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.College.CollegeName)</td>
                            <td>@Html.DisplayFor(modelItem => item.School.SchoolName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.AccountID)</td>
                            <td>
                                <form method="post" asp-page-handler="AddToCommittee" style="display:inline;">
                                    <input type="hidden" name="userId" value="@item.UserId" />
                                    <button class="btn btn-primary btn-sm">Add to Committee</button>
                                </form>
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.UserId" class="text-muted">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.UserId" class="text-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    // File uploader: show filename and submit button when file is selected
    document.getElementById('fileInput').addEventListener('change', function () {
        const submitBtn = document.getElementById('uploadSubmit');
        const fileNameSpan = document.getElementById('fileName');

        if (this.files.length > 0) {
            fileNameSpan.textContent = this.files[0].name;
            fileNameSpan.style.display = 'inline';
            submitBtn.style.display = 'inline-block';
        }
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alert = document.getElementById("uploadSuccessAlert");
        if (alert) {
            setTimeout(() => {
                alert.style.transition = "opacity 1s ease";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 1000);
            }, 3000);
        }
    });
</script>
