@page
@model University_Grant_Application_System.Pages.AdminDashboard.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h1>Admin Dashboard</h1>

<!-- Displays if the uplaod was successful -->
@if (TempData["UploadSuccess"] != null)
{
    <div id="uploadSuccessAlert" class="alert alert-success mt-3">
        @TempData["UploadSuccess"]
    </div>
}

<div class="mb-3 d-flex gap-2">

    <button class="btn btn-primary">RSPG</button>

    <form method="post" enctype="multipart/form-data" class="d-flex gap-2 align-items-center">
        <input type="file" asp-for="UploadFile" id="fileInput" style="display:none" />

        <!-- Button that opens the file picker -->
        <button type="button" class="btn btn-secondary" onclick="document.getElementById('fileInput').click();">
            Upload File
        </button>

        <!-- Filename appears here -->
        <span id="fileName" class="text-muted" style="display:none;"></span>

        <!-- Submit button (hidden until a file is selected) -->
        <button type="submit" id="uploadSubmit" class="btn btn-success" style="display:none;">
            Submit
        </button>
    </form>

     <a asp-page="/Calendar" class="btn btn-primary">
            Calendar Tab
        </a>

</div>


<p>
    <a class="btn btn-primary" asp-page="Create">Create New User</a>
</p>

<h2>Committee Members</h2>

<table class="table">
    <colgroup>
        <col style="width: 8%;"> <!-- First Name -->
        <col style="width: 8%;"> <!-- Last Name -->
        <col style="width: 10%;"> <!-- College -->
        <col style="width: 12%;"> <!-- School -->
        <col style="width: 12%;"> <!-- Department -->
        <col style="width: 15%;"> <!-- email -->
        <col style="width: 9%;"> <!-- AccountId -->
        <col style="width: 10%;"> <!-- Chair -->
        <col style="width: 5%;"> <!-- Remove -->
        <col style="width: 11%"> <!-- Modify -->
    </colgroup>

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].College)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].School)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].AccountID)
            </th>
            <th>
                Make Chair
            </th>
            <th>
                
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CommitteeMembers)
    {
        <tr class="@(item.committeeMemberStatus == "chair" ? "table-success" : "")">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.College.CollegeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountID)
            </td>
            <td>
                @if (item.committeeMemberStatus == "chair")
                {
                    <span class="fw-bold">Chair</span>
                }
                else
                {
                    <form method="post" asp-page-handler="MakeChair" style="display:inline;">
                        <input type="hidden" name="userId" value="@item.UserId" />
                        <button class="btn btn-warning btn-sm">Make Chair</button>
                    </form>
                }
            </td>
            <td>
                <form method="post" asp-page-handler="RemoveFromCommittee">
                    <input type="hidden" name="userId" value="@item.UserId" />
                    <button class="btn btn-danger btn-sm">Remove</button>
                </form>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

