@page
@model University_Grant_Application_System.Pages.Colleges.EditModel

@{
    ViewData["Title"] = "Edit College";
    Layout = "_AdminLayout";
}

<h1>Edit College</h1>
<hr />

<div class="row">
    <div class="col-md-6">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="College.CollegeId" />

            <div class="mb-3">
                <label asp-for="College.CollegeName" class="form-label"></label>
                <input asp-for="College.CollegeName" class="form-control" />
                <span asp-validation-for="College.CollegeName" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
